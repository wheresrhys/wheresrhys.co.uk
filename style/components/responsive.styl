@media only screen and (max-width: 720px)
  .fake-json h1:after
    content: attr(data-medium)

@media only screen and (max-width: 480px)
  .fake-json h1:after
    content: attr(data-small) 


@media only screen and (max-width: 480px)

  .fake-json 
    // Indentation
    dd dl:after,
    dd ol:after
      padding-left 1rem

    dt:before,
    li:before
      padding-left 1rem

    dd li:before,
    li dt:before,
    dd dt:before,
    li li:before 
      padding-left 2rem

  .js .fake-json .accordion .content 
    margin: 0 1rem

    img
      display: none

    p,
    h2,
    ul
      margin-left: 0

  .js .fake-json .accordion .expanded .content
    margin: 1rem